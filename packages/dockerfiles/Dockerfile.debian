FROM node:20-bookworm

RUN apt-get update
WORKDIR /usr/app
RUN git clone https://github.com/remotion-dev/template-helloworld /usr/app
RUN cd /usr/app
RUN npm i
RUN apt install -y \
  libnss3 \
  libdbus-1-3 \
  libatk1.0-0 \
  libgbm-dev \
  libasound2 \
  libxrandr2 \
  libxkbcommon-dev \
  libxfixes3 \
  libxcomposite1 \
  libxdamage1 \
  libatk-bridge2.0-0
RUN npx remotion compositions
